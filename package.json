{
  "name": "sfcc-jobs-executor",
  "displayName": "SFCC jobs Executor",
  "description": "Execute SFCC jobs from VSCode.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "resources/icon.jpg",
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ionutvmi/sfcc-jobs-executor"
  },
  "bugs": {
    "url": "https://github.com/ionutvmi/sfcc-jobs-executor/issues",
    "email": "ionutvmi@gmail.com"
  },
  "contributes": {
    "commands": [
      {
        "command": "sfcc-jobs-executor.runJob",
        "title": "SFCC - Run job"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5"
  }
}
